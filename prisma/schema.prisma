generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ──────────────────────────────────────────

enum Role {
  USER
  ADMIN
}

enum MarketStatus {
  OPEN
  RESOLVED
}

enum Resolution {
  YES
  NO
}

enum OrderSide {
  BUY
  SELL
}

enum OrderType {
  LIMIT
  MARKET
}

enum OrderStatus {
  OPEN
  PARTIAL
  FILLED
  CANCELED
  REJECTED
}

enum AnchorBetStatus {
  OPEN
  PROMOTED
  CLOSED
}

// ─── Models ─────────────────────────────────────────

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  role         Role     @default(USER)
  createdAt    DateTime @default(now()) @map("created_at")

  wallet             Wallet?
  orders             Order[]
  positions          Position[]
  anchorBetsCreated  AnchorBet[] @relation("creator")
  anchorBetsOpponent AnchorBet[] @relation("opponent")
  sideBets           SideBet[]

  @@map("users")
}

model Wallet {
  id           String @id @default(uuid())
  userId       String @unique @map("user_id")
  balanceCents Int    @default(0) @map("balance_cents")
  lockedCents  Int    @default(0) @map("locked_cents")

  user User @relation(fields: [userId], references: [id])

  @@map("wallets")
}

model Market {
  id            String       @id @default(uuid())
  slug          String       @unique
  title         String
  description   String?
  status        MarketStatus @default(OPEN)
  resolvesTo    Resolution?  @map("resolves_to")
  tickSizeCents Int          @default(1) @map("tick_size_cents")
  createdAt     DateTime     @default(now()) @map("created_at")
  resolvedAt    DateTime?    @map("resolved_at")

  orders     Order[]
  trades     Trade[]
  positions  Position[]
  events     EventLog[]
  promotions Promotion[]

  @@map("markets")
}

model Order {
  id            String      @id @default(uuid())
  marketId      String      @map("market_id")
  userId        String      @map("user_id")
  side          OrderSide
  type          OrderType
  priceCents    Int?        @map("price_cents")
  qty           Int
  remainingQty  Int         @map("remaining_qty")
  lockedCents   Int         @default(0) @map("locked_cents")
  status        OrderStatus @default(OPEN)
  seq           BigInt
  clientOrderId String?     @map("client_order_id")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  market      Market  @relation(fields: [marketId], references: [id])
  user        User    @relation(fields: [userId], references: [id])
  takerTrades Trade[] @relation("taker")
  makerTrades Trade[] @relation("maker")

  @@unique([userId, clientOrderId])
  @@index([marketId, status])
  @@map("orders")
}

model Trade {
  id           String   @id @default(uuid())
  marketId     String   @map("market_id")
  takerOrderId String   @map("taker_order_id")
  makerOrderId String   @map("maker_order_id")
  priceCents   Int      @map("price_cents")
  qty          Int
  takerUserId  String   @map("taker_user_id")
  makerUserId  String   @map("maker_user_id")
  feeCents     Int      @default(0) @map("fee_cents")
  seq          BigInt
  createdAt    DateTime @default(now()) @map("created_at")

  market     Market @relation(fields: [marketId], references: [id])
  takerOrder Order  @relation("taker", fields: [takerOrderId], references: [id])
  makerOrder Order  @relation("maker", fields: [makerOrderId], references: [id])

  @@index([marketId])
  @@map("trades")
}

model Position {
  id               String @id @default(uuid())
  marketId         String @map("market_id")
  userId           String @map("user_id")
  yesShares        Int    @default(0) @map("yes_shares")
  costBasisCents   Int    @default(0) @map("cost_basis_cents")
  realizedPnlCents Int    @default(0) @map("realized_pnl_cents")

  market Market @relation(fields: [marketId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([marketId, userId])
  @@map("positions")
}

model EventLog {
  id        String   @id @default(uuid())
  marketId  String?  @map("market_id")
  type      String
  payload   Json
  seq       BigInt?
  createdAt DateTime @default(now()) @map("created_at")

  market Market? @relation(fields: [marketId], references: [id])

  @@index([marketId, seq])
  @@map("event_logs")
}

model PlatformFeeWallet {
  id           String @id @default("singleton")
  balanceCents Int    @default(0) @map("balance_cents")

  @@map("platform_fee_wallet")
}

model AnchorBet {
  id               String          @id @default(uuid())
  creatorUserId    String          @map("creator_user_id")
  opponentUserId   String?         @map("opponent_user_id")
  title            String
  rulesText        String          @map("rules_text")
  status           AnchorBetStatus @default(OPEN)
  arbitratorUserId String?         @map("arbitrator_user_id")
  createdAt        DateTime        @default(now()) @map("created_at")

  creator    User        @relation("creator", fields: [creatorUserId], references: [id])
  opponent   User?       @relation("opponent", fields: [opponentUserId], references: [id])
  sideBets   SideBet[]
  promotions Promotion[]

  @@map("anchor_bets")
}

model SideBet {
  id          String   @id @default(uuid())
  anchorBetId String   @map("anchor_bet_id")
  userId      String   @map("user_id")
  direction   String // 'YES' or 'NO'
  amountCents Int      @map("amount_cents")
  createdAt   DateTime @default(now()) @map("created_at")

  anchorBet AnchorBet @relation(fields: [anchorBetId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@map("side_bets")
}

model Promotion {
  id             String   @id @default(uuid())
  anchorBetId    String   @map("anchor_bet_id")
  marketId       String   @map("market_id")
  thresholdCents Int      @map("threshold_cents")
  promotedAt     DateTime @default(now()) @map("promoted_at")

  anchorBet AnchorBet @relation(fields: [anchorBetId], references: [id])
  market    Market    @relation(fields: [marketId], references: [id])

  @@map("promotions")
}
